---
const { className = "text-center" } = Astro.props;
---

<div class="w-full flex flex-col">
  <h2
    class={`${className} font-title text-stroke-2 sm:text-stroke-1 text-3xl md:text-4xl font-bold text-tertiary-400 tracking-wider`}
  >
    <slot />
  </h2>
  <h3
    class={`${className} font-title text-stroke-2 sm:text-stroke-1 font-bold tracking-wider`}
  >
    <span class="block text-base-400 text-2xl md:text-3xl">
      <slot name="sub-title" />
    </span>
    <span class="block text-primary-400 text-2xl md:text-3xl">
      <slot name="sub-title-2" />
    </span>
    <span class="block text-primary-400 text-2xl md:text-2xl">
      <slot name="sub-title-3" />
    </span>
  </h3>
</div>
